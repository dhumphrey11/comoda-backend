# FastAPI
LOG_LEVEL=INFO

# Database (Cloud SQL - Postgres / Local Postgres)
# For local docker-compose Postgres use:
# postgresql+psycopg://postgres:postgres@localhost:5432/comoda
DATABASE_URL=postgresql+psycopg://USER:PASSWORD@HOST:5432/comoda

# External APIs
COINAPI_KEY=your_coinapi_key
SANTIMENT_API_KEY=your_santiment_api_key

# ML Service
ML_SERVICE_BASE=http://ml:8080

# GCP / BigQuery
GCP_PROJECT_ID=comoda
BQ_DATASET=comoda_analytics
GOOGLE_APPLICATION_CREDENTIALS=/secrets/service-account.json
